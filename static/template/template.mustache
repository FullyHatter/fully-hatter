    <!-- Other settings -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content= {{description}}>
    <title>
        {{title}} | {{#lan.ja}}Fully Hatter の秘密の部屋{{/lan.ja}}{{#lan.en}}Fully Hatter and the Chamber of Secrets{{/lan.en}}
    </title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/earlyaccess/sawarabimincho.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cinzel+Decorative:400,700,900">
    <link rel="stylesheet" href={{cssPath}}>
    <!-- icon size should be larger than 192 x 192 -->
    <link rel="icon" href="/images/icons/favicon_192x192.png">
</head>

<body>
    <header>
        <section class="hero">
            <div class="hero-head">
                <nav class="navbar is-pulled-right" role="navigation" aria-label="main navigation">
                    <div class="navbar-brand">
                        <a class="navbar-item" href="/{{#lan.en}}en{{/lan.en}}">
                            <p class="title is-5">
                                <span class="orange-title">F</span>ully <span class="orange-title">H</span>atter {{#lan.ja}}の秘密の部屋{{/lan.ja}}{{#lan.en}}and the Chamber of Secrets{{/lan.en}}
                            </p>
                        </a>
                    </div>
                </nav>
            </div>
            <div class="hero-body">
                <div class="container">
                    {{#isNew}}
                    <span class="tag is-danger">New!</span><br><br>
                    {{/isNew}}
                    <h1 class="title is-5">{{title}}</h1>
                </div>
            </div>
            <div class="hero-foot">
                <div class="container">
                    <div class="level is-mobile">
                        <div class="level-left">
                            {{#keywordTag}}
                            <div class="level-item">
                                <div class="buttons has-addons">
                                    {{#tagItems}}
                                    <a class="button is-small is-info is-outlined" href="#{{tagId}}">{{tagName}}</a>
                                    {{/tagItems}}
                                </div>
                            </div>
                            {{/keywordTag}}
                            {{#likeButton}}
                            <div class="level-item">
                                <form method="post" action="/post/like">
                                    <input type="hidden" name="key" value="furimako">
                                    <input type="hidden" name="lan" value={{#lan.ja}}"ja"{{/lan.ja}}{{#lan.en}}"en"{{/lan.en}}>
                                    <button class="button is-small is-primary is-outlined is-rounded" name="urlPath" value={{urlPath}}>
                                        {{likeJA}} {{likeCount}}
                                    </button>
                                </form>
                            </div>
                            {{/likeButton}}
                        </div>
                        <div class="level-right">
                            <div class="level-item">
                                <small>
                                    {{#lan.ja}}Japanese | <a href="/en">English</a>{{/lan.ja}}
                                    {{#lan.en}}<a href="/">Japanese</a> | English{{/lan.en}}
                                </small>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </header>
    {{{paginationHTML}}}
    {{{bodyHTML}}}
    {{{paginationHTML}}}
    {{{relatedPages}}}
    {{{commentsFieldHTML}}}
    {{{relatedPages2}}}
    <footer class="footer">
        <div class="container">
            <div class="level">
                <div class="level-left">
                    <div class="level-item">
                        <p class="title is-5">
                            <span class="orange-title">F</span>ully <span class="orange-title">H</span>atter {{#lan.ja}}の秘密の部屋{{/lan.ja}}{{#lan.en}}and the Chamber of Secrets{{/lan.en}}
                        </p>
                    </div>
                    <div class="level-item">
                        <a class="twitter-follow-button" href="https://twitter.com/{{#lan.ja}}furimako{{/lan.ja}}{{#lan.en}}fully_hatter{{/lan.en}}">
                            Follow @{{#lan.ja}}furimako{{/lan.ja}}{{#lan.en}}FullyHatter{{/lan.en}}
                        </a>
                    </div>
                </div>
            </div>
